{
    "compilerOptions": {
      "outDir": "dist",
      "module": "esnext",
      "target": "es2015",
      "lib": ["dom", "esnext"],
      "moduleResolution": "node",
      "jsx": "react",
      "sourceMap": true,
      "declaration": true,
      "esModuleInterop": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "types": ["node", "jest", "@testing-library/jest-dom"],
      "noUnusedParameters": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./src",
      "paths": {
        "~/*": ["*"],
        "~/components/*": ["components/*"]
      }
    },
  
    "include": ["src"],
    "exclude": [
      "node_modules",
      "dist",
      "src/**/*.test.tsx",
      "src/**/*.stories.tsx"
    ]
  }
  